# vim: fdm=marker : noexpandtab :

# Sessions {{{

# Lock
super + x
	dm-tool switch-to-greeter

# Suspend
super + shift + x
	systemctl suspend

# Logout
super + Escape
	$HOME/.config/herbstluftwm/hl_quit

# }}}
# Herbstluft {{{

hyper + shift + r
	herbstclient reload

# Close window (and frame if empty)
super + q
	herbstclient close_and_remove

# Focus windows
super + {h,j,k,l}
	herbstclient focus {left,down,up,right}

# Move windows
super + shift + {h,j,k,l}
	herbstclient shift {left,down,up,right}

# Resize windows
super + {u,i,o,p}
	herbstclient resize {left,down,up,right} +15

# Fullscreen window
hyper + f
	herbstclient fullscreen toggle

# Split frames
hyper + {h,j,k,l}
	herbstclient split {left,bottom,top,right}

# Tags {{{{
super + {1-9}
	herbstclient use_index {0-8}
super + shift {1-9}
	herbstclient move_index {0-8}
# }}}}

# }}}
# Launcher {{{

# Prompt
super + d
	herbstclient spawn dmenu_run

# Terminal
super + Return
	herbstclient spawn termite

# Web Browser
super + w
	herbstclient spawn firefox

# Ranger
super + r
	herbstclient spawn st -w ranger -e ranger

# }}}
