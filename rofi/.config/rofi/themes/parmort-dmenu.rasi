/* vim: set ft=css : */

/* No semicolon!! */
@import "parmort-central"

* {
  spacing: 0;
}

window {
    anchor: north;
    location: north;
    width: 100%;
    children: [ horibox ];
    padding: 2px;
}

horibox {
  orientation: horizontal;
  children: [ prompt, entry, listview ];
}

listview {
  layout: horizontal;
  spacing: 5px;
  lines: 100;
}

entry {
  expand: false;
  width: 10em;
  padding: 2px;
}

prompt {
  padding: 2px 5px 2px 0;
}

element {
  padding: 2px 8px;
}
