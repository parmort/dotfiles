# vim: fdm=marker noexpandtab

# Sessions {{{

# Logout
super + Escape
	$HOME/.config/bspwm/quit

# }}}
# BSPWM {{{

# Restart
hyper + shift + r
	bspc wm --restart

# Close window
super + q
	bspc node --close

# Focus windows
super + {h,j,k,l}
	bspc node --focus {west,south,north,east}

# Move windows
super + shift + {h,j,k,l}
	bspc node --swap {west,south,north,east}

# Resize windows
hyper + {u,p}
	bspc node --resize right '{-5,5}' 0
hyper + {o,i}
	bspc node --resize down 0 '{-5,5}'

# Toggle fullscreen
hyper + f
	bspc node --state \~fullscreen

# Toggle floating
hyper + @space
	bspc node --state \~floating

# Toggle pseudo_tiled
hyper + t
	bspc node --state \~pseudo_tiled

# Cycle layouts (monocle|tiled)
hyper + m
	bspc desktop --layout next

# Tags {{{{
super + {1-9}
	bspc desktop --focus 'focused:^{1-9}'
super + shift {1-9}
	bspc node --to-desktop 'focused:^{1-9}'

super + {n,p}
	bspc monitor --focus {next,prev}
super + shift + {n,p}
	bspc node --to-monitor {next,prev}
# }}}}

# }}}
# Launcher {{{

# Prompt
super + d
	rofi -show drun -theme parmort-dmenu -display-drun "Run"

# Terminal
super + Return
	$TERMINAL

# Web Browser
super + w
	$BROWSER

# Mail Client
super + m
	mailspring

# Yakyak
super + y
	yakyak

# Todoist
super + t
	todoist

# Discord
hyper + d
	discord

# Calculator
super + c
	$TERMINAL --class=Calculator -e qalc

# FileManager
super + r
	$TERMINAL --class=FileManager -e lf

# Wallpaper selector
hyper + g
	selbg

# Screenshots
Print
	scrot -so ~/pictures/screen.png && sxiv ~/pictures/screen.png

# Bitwarden
hyper+b
	bwmenu -- -theme parmort-central

hyper + v
	$HOME/.local/bin/drives

hyper + e
	splatmoji copy

# }}}
# Media Keys {{{
XF86AudioMute
	amixer set Master toggle

XF86AudioLowerVolume
	amixer set Master 2%-

XF86AudioRaiseVolume
	amixer set Master 2%+

XF86MonBrightnessUp
	light -A 2

XF86MonBrightnessDown
	light -U 2

XF86Search
	light -S 20
# }}}
