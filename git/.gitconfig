[core]
  editor = nvim

[commit]
  gpgsign = true

[alias]
# Show the history
  hist = log --pretty=format:\"%C(green)%h %C(yellow)%ad %C(blue)[%cn]%C(red)%d %C(reset)%s\" --decorate --date=short
# Show the last commit
  last = log -1 --show-signature
# Checkout stuff
  co   = checkout
  cm   = checkout master
# Branches
  cb   = "!f() { git branch $1; git push --set-upstream origin $1; git checkout $1; }; f"
  db   = "!f() { git branch -d $1; git push -d origin $1; }; f"
# Initialize a new repository locally and remotely
  ini  = "!(git init; hub create)"
# Basic stuff
  a    = add .
  st   = status
  c    = commit
  cl   = clone
# Create releases
  rl   = "!f() { git tag $1; git push $1; hub release create $1; }; f"
  prl  = "!f() { git tag $1; git push $1; hub release create -p $1; }; f"
# Pushing
  pushup = "!(br=$(git branch | grep '*' | cut -c 3-); git push --set-upstream origin $br)"

