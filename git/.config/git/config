[user]
  email = parvus.mortalis@gmail.com
  name = Nolan Prochnau

[core]
  editor = nvim
  pager = less
  excludesfile = $XDG_CONFIG_HOME/git/ignore

[advice]
  detachedHead = false

[alias]
  hist = log --pretty=format:\"%C(green)%h %C(yellow)%ad %C(blue)[%cn]%C(red)%d %C(reset)%s\" --decorate --date=short
  last = "!f() { export GIT_PAGER=''; git log -1 --show-signature; }; f"
  nuke = "!f() { git push --delete origin $1; git branch -d $1; }; f"
[pull]
	rebase = false
