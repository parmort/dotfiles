[colors]
; Background is transparent (#rrggbbaa)
background = #00000000
foreground = #d8dee9
black      = #3b4252
red        = #bf616a
green      = #a3be8c
yellow     = #ebcb8b
blue       = #81a1c1
magenta    = #b48ead
cyan       = #88c0d0
white      = #e5e9f0
brblack    = #4c566a
brred      = #bf616a
brgreen    = #a3be8c
bryellow   = #ebcb8b
brblue     = #81a1c1
brmagenta  = #b48ead
brcyan     = #8fbcbb
brwhite    = #eceff4
; }}}
; fonts {{{
[fonts]
mono = monospace:pixelsize=10;2
fa   = Font Awesome 5 Free:style=Solid:pixelsize=8;0
; }}}
; bar/top {{{
[bar/top]
width = 100%
height = 20
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
module-margin-left = 1
module-margin-right = 2
padding-right = 1
monitor = LVDS-1
font-0 = ${fonts.mono}
font-1 = ${fonts.fa}
modules-left = bspwm i3
modules-right = mpd volume
tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize
; }}}
; bar/bottom {{{
[bar/bottom]
width = 100%
height = 20
fixed-center = true
bottom = true
monitor = LVDS-1
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
module-margin-left = 1
module-margin-right = 1
padding-right = 1
font-0 = ${fonts.mono}
font-1 = ${fonts.fa}
modules-left = memory cpu
modules-center = time
modules-right = battery wlan eth
cursor-click = pointer
cursor-scroll = ns-resize
; }}}
; bar/vga {{{
[bar/vga]
width = 100%
height = 20
fixed-center = true
monitor = VGA-1
