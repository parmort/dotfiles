; }}}
; mod/xwindow {{{
[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
; }}}
; mod/filesystem {{{
[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground}
; }}}
; mod/bspwn {{{
[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.secondary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.tertiary}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2
; }}}
; mod/i3 {{{
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.black}

padding = 1

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.blue}
label-focused-underline = ${self.label-focused-background}
label-focused-padding = ${self.padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = #4b4b4b
label-unfocused-underline = ${self.label-unfocused-background}
label-unfocused-padding = ${self.padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.yellow}
label-visible-underline = ${self.label-visible-background}
label-visible-padding = ${self.padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.cyan}
label-urgent-padding = ${self.padding}
; }}}
; mod/cpu {{{
[module/cpu]
interval = 2
format-underline = ${colors.magenta}
type = internal/cpu
label = CPU: %percentage:3%%
; }}}
; mod/memory {{{
[module/memory]
interval = 2
format-underline = ${colors.magenta}
type = internal/memory
label = RAM: %percentage_used:3%%
; }}}
; mod/wlan {{{
[module/wlan]
type = internal/network
interval = 3.0
format-connected-underline = ${colors.green}
format-disconnected =
interface = wlan0
label-connected =  %local_ip%
; }}}
; mod/eth {{{
[module/eth]
type = internal/network
interval = 3.0
format-connected-underline = ${colors.green}
format-disconnected =
interface = enp9s0
label-connected =  %local_ip%
; }}}
; mod/time {{{
[module/time]
type = internal/date
interval = 1

time = %l:%M %p
date = %a %b %d

format-prefix-foreground = ${colors.foreground}
format-foreground = ${colors.foreground}
format-underline = ${colors.blue}
format-background = ${colors.black}

label = " %date% %time% "
; }}}
; mod/volume {{{
[module/volume]
type = internal/alsa

format-volume = <label-volume>
format-muted = <label-muted>

label-volume =  %percentage%%
label-muted =  %percentage%%
; }}}
; mod/mpd {{{
[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600
interval = 1

format-online = <label-song> <label-time>
format-playing = ${self.format-online}
format-paused = ${self.format-online}
format-stopped = ${self.format-online}

; Available tokens:
;   %artist%
;   %album-artist%
;   %album%
;   %date%
;   %title%
label-song = %artist% - %title%
label-time = (%elapsed%/%total%)
; }}}
; mod/battery {{{
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

label-charging = %percentage:4%%
format-charging = <label-charging>
format-charging-underline = ${colors.green}

label-discharging = %percentage:4%%
format-discharging = <label-discharging>
format-discharging-underline = ${colors.yellow}

label-full = %percentage:4%%
format-full = <label-full>
format-full-underline= ${colors.cyan}
; }}}
